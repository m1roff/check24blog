{% extends 'admin_base.html.twig' %}

{% block title %}Posts list{% endblock %}

{% block body %}

    <table class="table table-bordered">
        <thead>
            <th>Title</th>
            <th>Post Date</th>
            <th>Actions</th>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.postDate|date('d.m.Y') }}</td>
                <td>
                    <a onclick="return confirm('Are you sure?')" class="btn btn-warning btn-sm" href="{{ path('admin_blog_delete', {'id': post.id}) }}">Delete</a>
                    <a class="btn btn-info btn-sm" href="{{ path('admin_blog_update', {'id': post.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No posts</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
